# Сервер
PORT=3001
NODE_ENV=development

# База данных SQLite (по умолчанию)
DB_TYPE=sqlite
DB_STORAGE=./database.sqlite

# Для PostgreSQL раскомментируйте и настройте:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mini_market
# DB_USER=postgres
# DB_PASSWORD=your_password_here

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Загрузка файлов
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/zip,application/x-rar-compressed

# Безопасность
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CODE_ATTEMPTS_MAX=5
CODE_ATTEMPTS_WINDOW_MINUTES=15
CODE_BLOCK_DURATION_MINUTES=30

# Срок действия кодов по умолчанию
DEFAULT_CODES_EXPIRATION_DAYS=365

# Фронтенд URL (для CORS)
FRONTEND_URL=https://kabanstore.com

# Логирование
LOG_LEVEL=info
